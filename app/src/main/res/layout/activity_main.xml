<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <TextView
            android:id="@+id/textToBeChanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="Hello Camera"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/blueConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onBlueConnect"
            android:text="连接蓝牙" />

        <Button
            android:id="@+id/wifiConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onWifiConnect"
            android:text="连接wifi" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_dynamic_neutral_variant80">
        </ImageView>
    </LinearLayout>
</LinearLayout>